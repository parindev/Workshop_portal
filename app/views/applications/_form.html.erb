<%= form_for @application, :html => { :class => "form-horizontal application" } do |f| %>

  <% if @application.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @application.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :motivation, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :motivation, :class => 'form-control' %>
    </div>
    <%=f.error_span(:motivation) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :workshop_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :workshop_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:workshop_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                applications_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
